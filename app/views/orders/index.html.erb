
  <section class="main-body">
    <h1>Oh no!</h1>

    <h3>Sad. It looks like you don't have any items on your cart.</h3>
    <h3>But don't worry! Momosy Squad can fix that!</h3>

    <nav class="navbar navbar-expand-md">
      <span>
        <p><%= link_to "Home", root_path, class:"btn btn-custom" %></p>
        <p><%= link_to "View all Art", products_path, class:"btn btn-custom" %></p>
      </span>
    </nav>
  </section>


  <section class="cart-summary__container">
  <h3 class="cart-summary__header"> All existing orders</h3>
  <table class="table">
    <thead class="thead-table">
    <tr>
      <th>Order ID</th>
      <th>Order Cost</th>
      <th>Purchaser</th>
    </tr>
  </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td>$<%= '%.2f' % order.order_cost %></td>
          <td><%= order.name%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
